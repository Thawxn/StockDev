<%- include('includes/head') %>

<section class="container">
  <h1>Hello Word</h1>

  <div class="responsive-table">
    <table class="table my-3">

      <div class="col-lg">

        <% if(product.id) { %>
          <form action="/product/edit/<%= product.id %>" method="post">
        <% } else { %>
          <form action="/product/register" method="post">
        <% } %>
          <div class="form-group">
            <label>Código de Barra</label>
            <input value="<%= product.barcode %>" type="text" class="form-control" name="barcode">
          </div>
          <div class="form-group">
            <label>Nome</label>
            <input value="<%= product.name %>" type="text" class="form-control" name="name">
          </div>
          <div class="form-group">
            <label>Preço</label>
            <input value="<%= product.price %>" type="text" class="form-control" name="price">
          </div>
          <div class="form-group">
            <label>Tipo de Produto</label>
            <input value="<%= product.type_product.name %>" type="text" class="form-control" name="type_product">
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        </form>
      </div>


    </table>
  </div>
</div>

</section>

<%- include('includes/footer') %>