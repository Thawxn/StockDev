<%- include('../includes/head') %>

<section style="display: flex;">

  <%-include('../includes/nav') %>

  <div class="container shadow p-3 mb-5 bg-body-tertiary rounded">
    <div class="responsive-table">
      <table class="table my-3">
  
        <div class="col-lg">
          <% if(data.id) { %>
          <form action="/stock/edit/<%= data.id %>" method="post">
          <% } else { %>
          <form action="/stock/register" method="post">
          <% } %>
  
            <div class="form-group my-3">
              <label>Código de Barra</label>
              <input value="<%= data.product.barcode %>" type="text" class="form-control" disabled name="barcode">
            </div>
  
            <div class="form-group my-3">
              <label>Nome</label>
              <input value="<%= data.product.name %>" type="text" class="form-control" disabled name="productId">
            </div>
  
            <div class="form-group my-3">
              <label>Quantidade</label>
              <input value="<%= data.amount %>" type="text" class="form-control" name="amount">
            </div>
  
            <div class="form-group my-3">
              <label>Localização</label>
              <input value="<%= data.location.name %>" type="text" class="form-control" disabled name="locationId">
            </div>
  
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg btn-block">Editar</button>
            </div>
            
          </form>
        </div>
  
      </table>
    </div>
  </div>

</section>

<%- include('../includes/footer') %>